<div id="new" v-cloak>

  <h1>Cookbook</h1>
  <h2>New recipe</h2>

<form>
    <div class="form-group">
      <label for="recipeTitleInput" class="bmd-label-floating">Title</label>
      <input type="text" class="form-control" id="recipeTitleInput" name="title">
    </div>
    <div class="form-group">
      <label for="recipeDescriptionInput" class="bmd-label-floating">Description</label>
      <textarea type="text" class="form-control" id="recipeDescriptionInput" name="description"></textarea>
    </div>

    <h3>Ingredients <small><a class="btn btn-default" onclick="addIngredient()">Add new</a></small> </h3>
    <div id="ingredientForm">
    </div>

    <a class="btn btn-default" onclick="redirectBack()">Back</a>
    <a onclick="createRecipe()" class="btn btn-primary btn-raised">Submit</a>
  </form>
</div>
